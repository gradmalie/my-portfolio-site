// Hero section for the homepage
---

<section id="hero" class="min-h-screen flex items-center pt-20">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-6 animate-on-scroll">
        Turning complex energy & sustainability challenges into products that scale.
      </h1>
      
      <p class="text-xl text-neutral-700 mb-10 animate-on-scroll">
        Product management leader with 15+ years in energy, cleantech SaaS and trading.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
        <a href="#contact" class="btn btn-primary">
          Let's Connect
        </a>
        <a href="#portfolio" class="btn btn-outline">
          View Portfolio
        </a>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block">
    <a href="#portfolio" aria-label="Scroll down">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
